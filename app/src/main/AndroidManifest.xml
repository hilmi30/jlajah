<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.perumdajepara.jlajah">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <!--SPLASH ACTIVITY-->
        <activity android:name=".splashscreen.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--SIGNUP ACTIVITY-->
        <activity
            android:name=".signup.SignupActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            android:screenOrientation="portrait"/>
        <!--LOGIN ACTIVITY-->
        <activity
            android:name=".login.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <!--ULASAN ACTIVITY-->
        <activity android:name=".ulasan.UlasanActivity" />
        <!--DETAIL LOKASI ACTIVITY-->
        <activity
            android:name=".detaillokasi.DetailLokasiActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <!--KATEGORI LOKASI ACTIVITY-->
        <activity
            android:name=".kategorilokasi.KategoriLokasiActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <!--MAIN ACTIVITY-->
        <activity
            android:name=".main.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
        </activity>
    </application>

</manifest>