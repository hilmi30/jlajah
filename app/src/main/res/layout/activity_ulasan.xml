<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ulasan.UlasanActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_ulasan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:background="@android:color/white"
            android:id="@+id/toolbar_ulasan"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/enambelas"/>

    <TextView
        android:layout_marginBottom="@dimen/delapan"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/masukkan_rating"/>

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/rating_click_detail_lokasi"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/enambelas"/>

    <TextView
        android:layout_marginBottom="@dimen/delapan"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/masukkan_review"/>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="@dimen/enambelas"
        android:layout_marginEnd="@dimen/enambelas"
        android:layout_marginBottom="@dimen/enambelas"
        app:cardCornerRadius="@dimen/delapan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:padding="@dimen/enambelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_nothing"
            android:hint="@string/masukkan_review"/>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/enambelas"/>

</LinearLayout>